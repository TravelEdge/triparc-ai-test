# TripArc AI Developer Take-Home Assignment Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Azure OpenAI Configuration (if using Azure OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local AI Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Vector Database Configuration
# For Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# For Azure AI Search
AZURE_SEARCH_SERVICE_NAME=your_search_service_name
AZURE_SEARCH_API_KEY=your_search_api_key
AZURE_SEARCH_INDEX_NAME=triparc_embeddings

# Application Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration (if using external database)
DATABASE_URL=sqlite://./data/triparc.db
# DATABASE_URL=postgresql://user:password@localhost:5432/triparc_ai
# DATABASE_URL=mongodb://localhost:27017/triparc_ai

# Optional: Debugging and Development
DEBUG=true
VERBOSE_LOGGING=true